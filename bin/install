#!/usr/bin/env bash
# 
# author: Brennon Schow <me@brennongs.dev> gh: @brennongs
# updated 8/23/2022
#
TMP=~/tmp
REMOTE=false
REMOTE_OMZ=https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh

function install {
  mkdir $TMP 

  # install homebrew
  if ! command -v brew &> /dev/null; then
    /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
    eval "$(/opt/homebrew/bin/brew shellenv)"
    /opt/homebrew/bin/brew autoupdate start 14400 --upgrade --cleanup

    # if brew wasn't successful, exit
    if ! command -v brew &> /dev/null; then
      exit 1
    fi

    # install curl, zsh
    if ! command -v curl &> /dev/null; then
      brew install curl
    fi
  fi

  # if there is no .oh-my-zsh directory
  if [[ !(-d ~/.oh-my-zsh) ]]; then
    # silently install oh-my-zsh
    curl \
      -fsSL $REMOTE_OMZ \
      -o $TMP/omz.sh
    sed -i '' '/exec zsh/d' $TMP/omz.sh
    sh $TMP/omz.sh
    rm -rf $TMP/omz.sh
    ZSH_CUSTOM=~/.oh-my-zsh/custom

    # install powerlevel10k
      git clone --depth=1 \
        https://github.com/romkatv/powerlevel10k.git \
        $ZSH_CUSTOM/themes/powerlevel10k

    # install zsh-syntax-highlighting
    git clone \
      https://github.com/zsh-users/zsh-syntax-highlighting.git \
      $ZSH_CUSTOM/plugins/zsh-syntax-highlighting
  fi

  # install slack
  brew install --cask slack

  # install sf mono nerd font
  brew tap epk/epk
  brew install --cask font-sf-mono-nerd-font

  # install nvm and node
  curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.36.0/install.sh | bash
  nvm install 16

  # install vim-plug
  curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

  # install fzf
  brew install fzf

  # install iterm2
  brew install --cask iterm2

  # enable key repeat
  defaults write -g ApplePressAndHoldEnabled -bool false

  rm -rf $TMP
}

# ============
# start script
# ============
install

# copy necessary files to ~
cp ./src/.zshrc ~
cp ./src/.psqlrc ~
cp ./src/.p10k.zsh ~
cp ./src/.vimrc ~
cp -r ./src/plist/com.brennongs* ~/Library/LaunchAgents/

# set login shell
chsh -s $(which zsh) $USER

# start new session
zsh
zource
nvm install --lts

